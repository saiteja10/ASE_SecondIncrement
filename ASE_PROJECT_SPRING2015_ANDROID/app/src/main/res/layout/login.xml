<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:weightSum="1">
    <TextView android:layout_width="141dp" android:layout_height="67dp" android:text="Login" android:id="@+id/textView"
              android:layout_gravity="center_horizontal" android:textStyle="bold" android:textSize="50dp"
              android:onClick="onSetting"/>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal" android:clickable="true">
        <CheckBox android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="Log In as an Employee" android:id="@+id/isEmployee" android:checked="false"
                  android:layout_below="@+id/textView3" android:layout_centerHorizontal="true"
                  android:layout_alignParentTop="false" android:layout_alignParentLeft="false"
                  android:layout_alignParentBottom="false" android:layout_alignWithParentIfMissing="false"
                  android:singleLine="false" android:layout_marginTop="20dp"/>
        <EditText android:layout_width="150dp" android:layout_height="wrap_content" android:id="@+id/email"
                  android:layout_alignTop="@+id/textView2" android:layout_alignStart="@+id/textView4"/>
        <EditText android:layout_width="150dp" android:layout_height="wrap_content"
                  android:inputType="textPassword" android:ems="10" android:id="@+id/password"
                  android:layout_alignTop="@+id/textView3" android:layout_alignStart="@+id/email"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="User Name"
                  android:id="@+id/textView2" android:layout_alignParentTop="true"
                  android:layout_alignParentStart="true" android:layout_marginTop="50dp" android:textSize="22dp"
                  android:layout_marginLeft="5dp"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:textAppearance="?android:attr/textAppearanceLarge" android:text="Password"
                  android:id="@+id/textView3" android:layout_marginTop="33dp" android:layout_below="@+id/textView2"
                  android:layout_alignParentStart="true" android:layout_marginLeft="5dp"/>
        <TextView android:layout_width="80dp" android:layout_height="35dp" android:text="Login"
                  android:id="@+id/textView4" android:textSize="25dp" android:singleLine="false"
                  android:textStyle="bold" android:layout_centerVertical="true" android:layout_centerHorizontal="true"
                  android:linksClickable="true" android:onClick="onLogin"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="Using for the First time?" android:id="@+id/textView5" android:layout_marginTop="63dp"
                  android:layout_below="@+id/textView4" android:layout_alignParentStart="true"
                  android:layout_marginLeft="5dp"/>
        <ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content"
                     android:id="@+id/imageButton" android:src="@drawable/images" android:layout_below="@+id/textView5"
                     android:layout_centerHorizontal="true" android:layout_alignParentEnd="false"
                     android:layout_alignParentStart="false" android:layout_marginTop="10dp"/>
    </RelativeLayout>
</LinearLayout>

