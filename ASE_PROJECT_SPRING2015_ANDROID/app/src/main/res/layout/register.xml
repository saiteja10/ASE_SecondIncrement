<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
            android:layout_width="207dp"
            android:layout_height="wrap_content"
            android:text="New Users"
            android:id="@+id/textView6" android:textSize="40dp" android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"/>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_gravity="center_horizontal">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="First Name"
                android:id="@+id/textView7"
                android:layout_marginTop="41dp" android:textSize="18dp"
                android:layout_alignParentTop="true" android:layout_alignParentStart="true"
                android:textIsSelectable="false" android:layout_marginLeft="10dp" android:layout_marginBottom="14dp"/>
        <EditText
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/fname"
                android:layout_marginRight="5dp"
                android:layout_above="@+id/lname" android:layout_alignStart="@+id/rpwd"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Last Name"
                android:id="@+id/textView8"
                android:textSize="18dp" android:layout_below="@+id/textView7"
                android:layout_alignStart="@+id/textView7" android:layout_marginBottom="14dp"/>
        <EditText
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:id="@+id/lname"
                android:layout_below="@+id/textView7" android:layout_alignStart="@+id/fname"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Password"
                android:id="@+id/textView9"
                android:textSize="18dp" android:layout_below="@+id/textView8" android:layout_alignParentStart="true"
                android:layout_marginLeft="10dp" android:layout_marginBottom="14dp"/>
        <EditText
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/rpwd"
                android:password="true" android:layout_below="@+id/textView8" android:layout_alignParentEnd="true"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Re-enter Password"
                android:id="@+id/textView10"
                android:textSize="18dp"
                android:layout_below="@+id/textView9" android:layout_alignStart="@+id/textView9"
                android:layout_marginBottom="14dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:id="@+id/textView11" android:layout_below="@+id/textView10"
                android:layout_alignStart="@+id/textView10" android:textSize="18dp" android:layout_marginBottom="14dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mobile Number"
                android:id="@+id/textView12"
                android:layout_below="@+id/textView11" android:layout_alignStart="@+id/textView11"
                android:textSize="18dp" android:layout_marginBottom="14dp"/>
        <EditText
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:id="@+id/remail"
                android:layout_alignTop="@+id/textView11" android:layout_alignStart="@+id/rcpwd"/>
        <EditText
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:ems="10"
                android:id="@+id/editText8"
                android:layout_alignTop="@+id/textView12" android:layout_alignStart="@+id/remail"/>
        <EditText
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/rcpwd"
                android:layout_below="@+id/textView9" android:layout_alignStart="@+id/rpwd"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign Up as an Employee"
                android:id="@+id/textView13"
                android:textSize="16dp"
                android:layout_below="@+id/textView12" android:layout_alignStart="@+id/textView12"
                android:layout_marginTop="5dp"/>
        <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:id="@+id/checkBox2"
                android:checked="false"
                android:layout_alignTop="@+id/textView13" android:layout_alignStart="@+id/editText8"
                />
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton2"
                android:layout_marginTop="33dp"
                android:nestedScrollingEnabled="false" android:src="@drawable/images"
                android:layout_below="@+id/checkBox2" android:layout_centerHorizontal="true"
                android:onClick="onRegister"/>
    </RelativeLayout>
</LinearLayout>