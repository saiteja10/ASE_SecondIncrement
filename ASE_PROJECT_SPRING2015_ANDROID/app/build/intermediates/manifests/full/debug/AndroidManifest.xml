<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.FrontEnd_PG4"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.INTERNET" />

    <android:uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />
    <android:uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <android:uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <activity
            android:name="com.example.FrontEnd_PG4.LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.FrontEnd_PG4.RegisterActivity" />
        <activity android:name="com.example.FrontEnd_PG4.SettingActivity" />
        <activity android:name="com.example.FrontEnd_PG4.EmployeeDashboard" />
        <activity android:name="com.example.FrontEnd_PG4.AdminDashboard" />
        <activity
            android:name="com.example.FrontEnd_PG4.ItemActivity"
            android:label="@string/title_activity_item"
            android:theme="@style/Theme.AppCompat"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name="com.example.FrontEnd_PG4.CategoryActivity"
            android:label="@string/title_activity_category"
            android:theme="@style/Theme.AppCompat"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name="com.example.FrontEnd_PG4.SubCategoryActivity"
            android:label="@string/title_activity_sub_category"
            android:theme="@style/Theme.AppCompat"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name="com.example.FrontEnd_PG4.ShoppingCartActivity"
            android:label="@string/title_activity_shopping_cart"
            android:theme="@style/Theme.AppCompat"
            android:windowSoftInputMode="adjustPan" >
        </activity>
    </application>

</manifest>